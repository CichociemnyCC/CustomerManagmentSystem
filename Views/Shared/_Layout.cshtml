@using System.Security.Claims
@using CRM_Duo_Creative.Models
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject IConfiguration Configuration


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Customer Managment System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CRM_Duo_Creative.styles.css" asp-append-version="true" />
</head>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/css/bootstrap-select.min.css">
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    Customer Management System
                    <small class="text-muted" style="font-size:0.8rem;">
                        v@(Configuration["AppInfo:Version"])

                    </small>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <ul class="navbar-nav mx-auto align-items-center">
                                <li class="nav-item">
                                    <a class="nav-link text-dark @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")"
                                    asp-area="" asp-controller="Home" asp-action="Index">
                                        Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark @(ViewContext.RouteData.Values["controller"]?.ToString() == "Clients" ? "active" : "")"
                                    asp-area="" asp-controller="Clients" asp-action="Index">
                                        Baza klientów
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark @(ViewContext.RouteData.Values["controller"]?.ToString() == "Realizations" ? "active" : "")"
                                       asp-area="" asp-controller="Realizations" asp-action="Index">
                                        Realizacje
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark @(ViewContext.RouteData.Values["controller"]?.ToString() == "Leads" ? "active" : "")"
                                    asp-area="" asp-controller="Leads" asp-action="Index">
                                        Leady
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark @(ViewContext.RouteData.Values["controller"]?.ToString() == "Calendar" ? "active" : "")"
                                    asp-area="" asp-controller="Calendar" asp-action="Index">
                                        Kalendarz
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark @(ViewContext.RouteData.Values["controller"]?.ToString() == "Reports" ? "active" : "")"
                                    asp-area="" asp-controller="Reports" asp-action="Index">
                                        Raporty
                                    </a>
                                </li>

                                @if (User.IsInRole("Admin") || User.IsInRole("Dyrektor"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark @(ViewContext.RouteData.Values["controller"]?.ToString() == "Invoices" ? "active" : "")"
                                        asp-area="" asp-controller="Invoices" asp-action="Index">
                                            Fakturowanie
                                        </a>
                                    </li>
                                }
                                @if (User.IsInRole("Admin"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark @(ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" ? "active" : "")"
                                        asp-area="" asp-controller="Admin" asp-action="Index">
                                            Panel Administracyjny
                                        </a>
                                    </li>
                                }
                            </ul>
                        }

                        <ul class="navbar-nav ms-auto align-items-center">
                            @if (User.Identity?.IsAuthenticated ?? false)
                            {
                                <li class="nav-item">
                                    <span class="nav-link text-dark">
                                        @{
                                            var appUser = await UserManager.GetUserAsync(User);
                                        }
                                        Zalogowany jako: @(appUser?.FirstName) @(appUser?.LastName)
                                        <br />
                                        Twój Poziom Dostępu: @User.FindFirst(ClaimTypes.Role)?.Value
                                    </span>
                                </li>
                                <li class="nav-item ms-5">
                                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" method="post">
                                        <button type="submit" class="btn btn-link nav-link text-dark">Wyloguj</button>
                                    </form>
                                </li>
                            }
                            else
                            {
                            }
                        </ul>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Krzysztof Wagner & Duo-Creative.pl
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/js/bootstrap-select.min.js"></script>

</body>
</html>
