@model CRM_Duo_Creative.Models.Realization
@using Microsoft.AspNetCore.Identity
@using CRM_Duo_Creative.Models

@{
    ViewData["Title"] = "Przypisz użytkownika";
    var users = ViewBag.Users as List<ApplicationUser>;
}

<h2>Przypisz użytkownika do klienta: <strong>@Model.Client.ClientName</strong></h2>

<form asp-action="Assign" method="post" class="mt-4">
    <input type="hidden" name="id" value="@Model.Id" />

    <div class="mb-3">
        <label for="userId" class="form-label">Wybierz użytkownika:</label>
        <select name="userId" class="form-select" required>
            <option value="">-- Wybierz --</option>
            @foreach (var user in users)
            {
                <option value="@user.Id">@user.FirstName @user.LastName</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-success">Zapisz</button>
    <a class="btn btn-secondary" href="@Url.Action("Index", new { month = ViewBag.SelectedMonth })">Anuluj</a>
</form>
