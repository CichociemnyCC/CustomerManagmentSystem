@model EditUserViewModel

<div class="container mt-5">
    <h2>Edycja użytkownika: @Model.Email</h2>

    <form asp-action="EditUser" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label>Imię</label>
            <input class="form-control" asp-for="FirstName" />
        </div>
        <div class="mb-3">
            <label>Nazwisko</label>
            <input class="form-control" asp-for="LastName" />
        </div>
        <div class="mb-3">
            <label>Nowe hasło</label>
            <input asp-for="NewPassword" type="password" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Powtórz nowe hasło</label>
            <input asp-for="ConfirmPassword" type="password" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Blokada konta</label>
            <input type="checkbox" asp-for="IsBlocked" />
        </div>

        <div class="mb-3">
            <label>Role użytkownika</label>
            @foreach (var role in Model.AllRoles)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="SelectedRoles" value="@role"
                           @(Model.CurrentRoles.Contains(role) ? "checked" : "") />
                    <label class="form-check-label">@role</label>
                </div>
            }
        </div>

        <button type="submit" class="btn btn-success">Zapisz</button>
        <a class="btn btn-secondary" asp-action="Users">Anuluj</a>
    </form>
</div>
