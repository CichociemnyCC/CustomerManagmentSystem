@model EditUserViewModel

<div class="container mt-5">
    <h2>Potwierdzenie usunięcia użytkownika</h2>
    <p class="mt-3">
        Czy na pewno chcesz <strong>usunąć użytkownika</strong>:
        <br />
        <strong>@Model.FirstName @Model.LastName</strong> (<code>@Model.Email</code>) ?
    </p>

    <form asp-action="DeleteUserConfirmed" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Tak, usuń użytkownika</button>
        <a class="btn btn-secondary" asp-action="Users">Anuluj</a>
    </form>
</div>
